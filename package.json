{
  "name": "chat-tiktok",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "extraResources": [
      {
        "from": "data/",
        "to": "data/",
        "filter": ["tiktok_chat.db"]
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "appId": "com.monapp.electron",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "axios": "^1.8.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "openai": "^4.86.2",
    "socket.io": "^4.4.1",
    "sqlite3": "^5.1.7",
    "tiktok-live-connector": "^1.2.3"
  },
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8"
  }
}
